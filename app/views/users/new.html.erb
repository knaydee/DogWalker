<fieldset>
  <%= form_for @user, url:{ action: @action } do |f| %>
    <legend><h1>Sign up here</h1></legend>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Submit", :class => 'submit_button' %>
  <% end %>
</fieldset>
