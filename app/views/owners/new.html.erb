<fieldset>
  <%= form_for @owner do |f| %>
    <legend><h1>Sign up here</h1></legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Submit", :class => 'submit_button' %>
  <% end %>
