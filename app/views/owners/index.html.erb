<h1>Welcome!</h1>
<nav>
<%= link_to "My profile", user_owner_path(@owner.id) %> <%= link_to "Logout", logout_path %>
</nav>
<% if @owner.bio.nil? %>
<p>Thanks for signing up! Please complete your profile by clicking <%= link_to "here", owner_path(@owner.id) %>.
  There, you can add a brief bio about yourself and add information about your dogs!
</p>
<% end %>
<br>
<% if !@pets.nil? %>
  <p>These are the dogs that need a walking</p>
  <% @pets.each do |pet| %>
    <%= pet.name %>
    <br>
    <% if !pet.image.nil? %>
      <%= image_tag pet.image.url(:medium) %>
    <% end %>
  <% end %>
<% end %>
